{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./backend",     // where your .ts files live
    "outDir": "./dist",         // where compiled JS files will be output
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["backend"]
}
