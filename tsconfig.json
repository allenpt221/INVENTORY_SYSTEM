{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "backend",
    "outDir": "backend/dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "backend",
    "skipLibCheck": true,
    "types": ["node"],
    "paths": {
      "@/*": ["backend/*"]
    }
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules", "backend/dist"]
}