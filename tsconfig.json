{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "backend",
    "outDir": "backend/dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "backend",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["node_modules", "backend/dist"]
}
